{
  "lexicon": 1,
  "id": "moe.hayden.cookware.cookbook",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record containing a Cookware recipe collection.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["title", "ingredients", "steps"],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 3000,
            "maxGraphemes": 300,
            "description": "The title of the recipe."
          },
          "description": {
            "type": "string",
            "maxLength": 3000,
            "maxGraphemes": 300,
            "description": "The description of the recipe."
          },
          "recipes": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "com.atproto.repo.strongRef"
            }
          }
        }
      }
    }
  }
}
