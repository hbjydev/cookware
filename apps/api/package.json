{
  "name": "@cookware/api",
  "type": "module",
  "private": true,
  "main": "dist/index.cjs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.cjs",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.12",
    "jose": "^5.9.6",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@cookware/lexicons": "workspace:*",
    "@cookware/tsconfig": "workspace:*",
    "@types/node": "^22.10.1",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
